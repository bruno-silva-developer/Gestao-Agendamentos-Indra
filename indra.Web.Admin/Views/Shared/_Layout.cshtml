@inject indra.Web.Admin.Bibliotecas.LoginAdmin login

@{
    var admin = login.GetAdmin();
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv=”content-type” content="text/html;" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="keywords" content="indra, gestão, estética, beleza" />
    <meta name="author" content="Bruno Carlos da Silva, Emanuel Ítalo Ferreira Menezes">
    <title>@ViewData["Title"]</title>
    <link rel="icon" type="image/png" href="~/images/logo-indra.ico">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link href=@Url.Content("~/assets/css/material-dashboard.css?v=2.1.2") rel="stylesheet" />
    <link href=@Url.Content("~/assets/css/material-dashboard.css?v=2.1.2") rel="stylesheet" />
    <link href=@Url.Content("~/css/site.css") rel="stylesheet" />
    <link href="../css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/font-awesome-4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/sweetAlert/sweetalert.css" />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src=@Url.Content("~/assets/js/core/jquery.min.js")></script>
    <script src=@Url.Content("~/assets/js/core/popper.min.js")></script>
    <script src=@Url.Content("~/assets/js/core/bootstrap-material-design.min.js")></script>
    <script src=@Url.Content("~/assets/js/plugins/perfect-scrollbar.jquery.min.js")></script>
    <script src=@Url.Content("~/assets/js/material-dashboard.js") type="text/javascript"></script>
</head>

<body class="">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
            <div class="navbar-wrapper">
                <a class="navbar-brand" href="javascript:;"></a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
            </button>
            <!--Parte de Relatórios-->
            <div class="collapse navbar-collapse justify-content-sm-end">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons text-dark">print</i>
                            Relatórios
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                            <a class="dropdown-item" asp-controller="Relatorios" asp-action="Agendamentos">
                                <i class="material-icons text-dark">calendar_today</i>
                                Agendamentos
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Relatorios" asp-action="Profissionais">
                                <i class="material-icons text-dark">face</i>
                                Profissionais
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Relatorios" asp-action="Clientes">
                                <i class="material-icons text-dark">face</i>
                                Clientes
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Relatorios" asp-action="Servicos">
                                <i class="material-icons text-dark">room_service</i>
                                Serviços
                            </a>
                        </div>
                    </li>
                </ul>
                <!--Perfil do Usuário-->
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons text-dark">person</i>
                            <span class="mr-2 d-none d-lg-inline text-gray-600 small">@admin.PessoaFisica.Nome</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                            <a class="dropdown-item" asp-controller="Home" asp-action="Perfil">Perfil</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="wrapper" id="menuLateral">
        <div class="sidebar" data-image="url(https://i.imgur.com/PDDqGfU.png">
            <div class="logo">
                <a class="simple-text logo-normal">
                    INDRA
                    <img src="~/images/logo-indra.png" height="30px" width="35px" />
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "nav-item active" : "nav-item")">
                        <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                            <i class="material-icons text-dark">home</i>
                            Home <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Profissionais" ? "nav-item active" : "nav-item")">
                        <a class="nav-link" asp-controller="Profissionais" asp-action="Index">
                            <i class="material-icons text-dark">person</i>
                            Profissionais
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Clientes" ? "nav-item active" : "nav-item")">
                        <a class="nav-link" asp-controller="Clientes" asp-action="Index">
                            <i class="material-icons text-dark">person</i>
                            Clientes
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Administradores" ? "nav-item active" : "nav-item")">
                        <a class="nav-link" asp-controller="Administradores" asp-action="Index">
                            <i class="material-icons text-dark">person</i>
                            Administradores
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Servicos" ? "nav-item active" : "nav-item")">
                        <a class="nav-link" asp-controller="Servicos" asp-action="Index">
                            <i class="material-icons text-dark">room_service</i>
                            Serviços
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Agendamentos" ? "nav-item active" : "nav-item")">
                        <a class="nav-link" asp-controller="Agendamentos" asp-action="Index">
                            <i class="material-icons text-dark">event</i>
                            Agendamentos
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel" style="padding: 30px;">

            <main>
                <br /><br />
                @RenderBody()
            </main>

        </div>
    </div>

    @RenderSection("Scripts", required: false)

</body>
</html>

<style>

    @@media (max-width: 768px) {
        .pull-right {
            float: left;
        }
        .pull-left {
            float: right;
        }
        .btn {
            display: block;
            width: 100%;
        }
    }

    .mr-2, .mx-2 {
        margin-right: 0.5rem !important;
        font-size: inherit;
    }

    .navbar .collapse .navbar-nav .nav-item .nav-link {
        position: relative;
        padding: 10px 15px;
        font-weight: 400;
        font-size: 12px;
        text-transform: uppercase;
        border-radius: 3px;
        line-height: 20px;
        margin-left: 5px;
        color: #343A40;
    }

    @@media (min-width: 768px) {
        .dropdown-menu .dropdown-item, .dropdown-menu li > a {
            padding-right: 1.5rem;
            padding-left: 1.5rem;
            color: black;
        }
    }

    .dashAzul {
        background-color: #00bcd4 !important;
        color: white !important;
        border: 0px !important;
    }

    .dashVerde {
        background-color: #6ae86f !important;
        color: white !important;
        border: 0px !important;
    }

    .dashCinza {
        background-color: #6c757d7d !important;
        color: white !important;
        border: 0px !important;
    }

    dashVermelho {
        background-color: #ff3c3c !important;
        color: white !important;
        border: 0px !important;
    }

    dashLaranja {
        background-color: white !important;
        color: darkorange !important;
        border: 0px !important;
    }

    select {
        -moz-appearance: none;
        -webkit-appearance: none;
        appearance: none;
        background-position: right center;
        background-repeat: no-repeat;
    }

    th {
        text-align: center !important;
        text-decoration: solid !important;
    }

    .titulo {
        background: linear-gradient( 60deg, #6c757d7d, #6c757dd1 ) !important;
        border-radius: 3px !important;
        padding: 15px !important;
        box-shadow: none !important;
    }

    .titulocliente {
        background: linear-gradient( 60deg, #0087ff7d, #0582f1d1 ) !important;
        border-radius: 3px !important;
        padding: 15px !important;
        box-shadow: none !important;
    }

    .card-header {
        padding: .75rem 1.25rem;
        margin-bottom: 0;
        background-color: #849ada;
        border-bottom: 1px solid #e3e6f0;
    }

    .btnAzul {
        background-color: #00bcd4;
        border: 0px;
    }

    .btnCinza {
        background-color: #5a5c69;
        border: 0px;
    }

    .btnVerde {
        background-color: #47a44b;
        border: 0px;
    }

    .btnVermelho {
        background-color: #dc3545;
        border: 0px;
    }

    .btnVermelho:hover {
        background-color: #dc3545;
        border: 0px;
    }

    .btnAzul:hover {
        background-color: #00bcd4;
        border: 0px;
    }

    .btnCinza:hover {
        background-color: #5a5c69;
        border: 0px;
    }

    .btnVerde:hover {
        background-color: #47a44b;
        border: 0px;
    }

    .nav-link {
        color: #000;
    }

    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        white-space: nowrap;
        line-height: 10px;
    }

    .nav-item.active {
        background-color: #00bcd4 !important;
        border: 0px !important;
        color: black !important;
        box-shadow: none !important;
    }

    .sidebar .nav li:hover > a,
    .sidebar .nav li .dropdown-menu a:hover,
    .sidebar .nav li .dropdown-menu a:focus,
    .sidebar .nav li.active > [data-toggle="collapse"] {
        background-color: #00bcd4;
        border: 0px;
        color: white;
        box-shadow: none;
    }

    .sidebar .nav li.active > a, .sidebar .nav li.active > a i {
        color: #000;
    }

    .sidebar .nav li a, .sidebar .nav li .dropdown-menu a {
        margin: 10px 15px 0;
        border-radius: 3px;
        color: #000000;
        padding-left: 10px;
        padding-right: 10px;
        text-transform: capitalize;
        font-size: 13px;
        padding: 10px 15px;
    }

    .dropdown-menu .dropdown-item:hover,
    .dropdown-menu .dropdown-item:focus,
    .dropdown-menu a:hover,
    .dropdown-menu a:focus,
    .dropdown-menu a:active {
        background-color: #00bcd4;
        border: 0px;
        color: white;
        box-shadow: none;
    }

    .perfect-scrollbar-on .sidebar,
    .perfect-scrollbar-on .main-panel {
        border: 0px;
    }

    .sidebar .sidebar-wrapper {
        border: 0px;
    }

    .sidebar .logo {
        border: 0px;
    }

    .modal {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        font-family: Arial, Helvetica, sans-serif;
        background: rgba(0,0,0,0.8);
        z-index: 99999;
        opacity: 0;
        -webkit-transition: opacity 400ms ease-in;
        -moz-transition: opacity 400ms ease-in;
        transition: opacity 400ms ease-in;
        pointer-events: none;
    }

        .modal:target {
            opacity: 1;
            pointer-events: auto;
        }

        .modal > div {
            width: 400px;
            position: relative;
            margin: 10% auto;
            padding: 15px 20px;
            background: #fff;
        }

    .fechar {
        position: absolute;
        width: 30px;
        right: -15px;
        top: -20px;
        text-align: center;
        line-height: 30px;
        margin-top: 5px;
        background: #ff4545;
        border-radius: 50%;
        font-size: 16px;
        color: #8d0000;
    }
</style>
